<!-- item.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:padding="10dp"
    android:weightSum="10">
    <ImageView
        android:id="@+id/menuImg"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="3"
        android:src="@drawable/truck"
        android:layout_marginRight="8dp">
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_name"
            style="@style/ItemMenuNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="불꽃 타코야키" />

        <TextView
            android:id="@+id/menu_name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ItemMenuInfoText"
            android:text="토치로 불맛을 내고 특제 불맛 소스를 곁들인 타코야키" />

        <TextView
            android:id="@+id/menu_price_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ItemMenuPriceText"
            android:text="14개 : 1000원" />

    </LinearLayout>



</LinearLayout>
