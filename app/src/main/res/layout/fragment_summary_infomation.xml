<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/summaryContainer"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/radius"
    android:theme="@style/Base.Theme.EatGo"
    tools:context=".presentation.store.SummaryInfomationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/storeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/openInfoTv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/summary_border_close"
            android:gravity="center"
            android:text="영업 중"
            android:textSize="17sp" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/cancelSummaryBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="306dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/openDayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/openTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/distance" />

        <TextView
            android:id="@+id/storeDistanceTv"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/rating_star" />

        <TextView
            android:id="@+id/storeRatingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
