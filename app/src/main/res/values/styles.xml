<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="CircularToggleButton" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle</item>
    </style>
    <style name="DayToggleButton" parent="android:Widget.Button.Toggle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="StoreRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/color_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemMenuNameText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemMenuInfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_dark_gray</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ItemMenuPriceText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItmeMenuForm">
        <item name="android:background">@drawable/item_menu_box_border</item>
    </style>

</resources>