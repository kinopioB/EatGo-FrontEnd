<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="CircularToggleButton" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle</item>
    </style>
    <style name="DayToggleButton" parent="android:Widget.Button.Toggle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="StoreRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/color_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemMenuNameText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemMenuInfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_dark_gray</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ItemMenuPriceText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- 공통으로 사용 가능한 style -->
    <style name="BigItemBoxWithShadow">
        <item name="android:elevation">20dp</item>
        <item name="android:background">@drawable/store_create_box_border</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="ItemBoxWithShadow">
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/store_create_box_border</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ItemBoxWithShadowNoElevation">
        <item name="android:background">@drawable/store_create_box_border</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MypageBoxWithShadow">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/store_create_box_border</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="QrScanBoxWithShadow">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/qr_scan_create_box_border</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="CategorySearchButton">
        <item name="android:elevation">15dp</item>
        <item name="android:background">@drawable/qr_scan_create_box_border</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


    <style name="YelloButtonTemplate">
        <item name="android:background"> @drawable/yellow_button</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:elevation">50dp</item>
    </style>

    <style name="BrownButtonTemplate">
        <item name="android:background"> @drawable/brown_button</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:elevation">50dp</item>
    </style>

    <style name="ToolBarTemplate">
        <item name="android:background">@drawable/tool_bar</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="NavigationTemplate">
        <item name="android:background">@drawable/nav_background</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/black</item> <!-- 기본 텍스트 색상 -->
        <item name="tabSelectedTextColor">@color/color_yellow</item> <!-- 눌렸을 때 텍스트 색상 -->
    </style>

</resources>